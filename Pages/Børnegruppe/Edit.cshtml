@page
@model NY2023.Pages.Børnegruppe.EditModel
@{
}

<br>
<h2>Liste af børnegruppe</h2>

@if (Model.errorMessage.Length > 0)
{
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>@Model.errorMessage</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">ID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="ID" value="@Model.børnegruppeInfo.ID">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Navn</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="navn" value="@Model.børnegruppeInfo.Navn">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Antal-Børn</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="antal_børn" value="@Model.børnegruppeInfo.AntalBørn">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Leder-ID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="leder_id" value="@Model.børnegruppeInfo.LederID">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Solgte-Lodder</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="solgte_lodder" value="@Model.børnegruppeInfo.SolgteLodder">
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
            <div class="row mb-3">
                <div class="col-sm-9">
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>@Model.successMessage</strong>
                        <button type="button" class="btn-close" data-bs-dimiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Bekræft</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Annullerer</a>
        </div>
    </div>
</form>